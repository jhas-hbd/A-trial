<h1>大枠</h1>

<%= form_with model: @post do |f| %>
  <div class="form-group">
    <label>場所</label>
    <%= f.text_field :spot, class: 'form-control post_spot' %>
  </div>
  <div class="form-group">
    <label>タイトル</label>
    <%= f.text_area :title, class: 'form-control post_title' %>
  </div>
  <div class="form-group">
    <label>画像</label>
    <%= f.file_field :image, class: 'form-control-file', accept: "image/*" %>
  </div>
  <div class="form-group">
    <label>タグ</label>
    <%= f.text_field :category, class: 'form-control post_category' %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-info" %>
  </div>
<% end %>